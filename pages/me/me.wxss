page {
    overflow: auto;
}

.wrapper {
    width: 100%;
}

.img_box {
    width: 116rpx;
    height: 92rpx;
    line-height: 116rpx;
    background: #000;
    opacity: 0.5;
    position: absolute;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
    z-index: 5;
}

.login {
    position: relative;
    width: 100%;
    height: 107px;
}

.login_header {
    width: 100%;
    height: 214rpx;
    position: absolute;
    left: 0;
    top: 0;
}

.userimg {
    position: absolute;
    top: 52rpx;
    left: 52rpx;
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    border: 1px solid #e5e5e5;
    overflow: hidden;
}

.userimg image {
    width: 130rpx;
    height: 130rpx;
    display: inline-block;
    border-radius: 50%;
    overflow: hidden;
}

.login-user {
    position: absolute;
    left: 200rpx;
    top: 50rpx;
}

.username,
.usertext {
    color: #fff;
    font-size: 32rpx;
    line-height: 85rpx;
    font-weight: bold;
}

.notice {
    width: 44rpx;
    height: 44rpx;
    margin: 5rpx 5rpx 0 0;
}


