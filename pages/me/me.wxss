.title {
    height: 85rpx;
    line-height: 85rpx;
    color: #888;
    font-size: 28rpx;
    padding-left: 30rpx
}

.imgs {
    padding: 30rpx 0 30rpx 30rpx;
    background: #fff;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
}

.select-img {
    width: 116rpx;
    height: 92rpx;
    border: 1px solid #e5e5e5;
    position: relative;
    margin-right: 10rpx;
}

.select-img image.add {
    width: 56rpx;
    height: 56rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -28rpx;
    margin-top: -28rpx;
}

.select-img image.img {
    width: 100%;
    height: 100%;
    position: absolute;
}

.camern {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 0;
    right: 0;
}

.nameAndPlace {
    line-height: 86rpx;
    padding-left: 30rpx;
    background: #fff;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    font-size: 34rpx;
    /* font-weight: bold; */
    margin: 20rpx 0;
}

.no-write {
    color: #ccc;
}

.arrows {
    width: 16rpx;
    height: 26rpx;
    margin-left: 20rpx;
}

.shop-name {
    border-bottom: 1px solid #e5e5e5;
    text-align: center;
    padding-right: 30rpx;
    overflow: hidden;
}

.city {
    padding-right: 30rpx;
}

.kinds-wrap {
    padding-left: 30rpx;
    background: #fff;
    border-top: 1px solid #e5e5e5;
    padding-bottom: 30rpx;
}

.kinds-wrap .kinds-title {
    line-height: 86rpx;
    font-size: 34rpx;
    /* font-weight: bold; */
    border-bottom: 1px solid #e5e5e5;
}

.all-kinds {
    width: 100%;
    overflow: hidden;
    padding-top: 30rpx;
}

.all-kinds .kind {
    border-radius: 30rpx;
    font-size: 28rpx;
    float: left;
    margin: 10rpx;
    padding: 0rpx 20rpx;
    line-height: 45rpx;
    color: #fff;
}

.huikuan,
.guanli,
.fankui,
.address {
    padding-right: 30rpx;
    font-size: 34rpx;
    line-height: 86rpx;
    background: #fff;
    overflow: hidden;
    border-bottom: 1px solid #e5e5e5
}

.huikuan .huikuan-info,
.guanli-info,
.fankui-info .address-info {
    color: #ccc;
}

.circle-ctr {
    width: 100%;
    display: block;
    text-align: center;
    font-size: 34rpx;
    line-height: 86rpx;
    padding-right: 30rpx;
    background: #fff;
    margin-top: 30rpx;
    overflow: hidden;
    border-bottom: 1px solid #E6E6E6;
}


/*========*/

.circle {
    height: 206rpx;
    margin-bottom: 75rpx;
}

.user-action {
    margin-top: 30rpx;
    padding-left: 30rpx;
    background: #fff;
    border-bottom: 1px solid #e5e5e5;
}

.finish {
    width: 690rpx;
    height: 88rpx;
    font-size: 36rpx;
    margin-top: 100rpx;
}