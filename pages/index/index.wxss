page {
    overflow-y: auto;
    background-color: #fff;
    overflow-x: hidden;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: initial;
    box-sizing: border-box;
}

.wrap {
    width: 100%;
}

.search {
    margin: 0px;
    padding: 0px;
    background-color: #10BBCF;
    width: 100%;
    height: 70rpx;
    position: fixed;
    z-index: 55;
    display: flex;
    flex-direction: row;
}

.more {
    width: 70rpx;
    height: 70rpx;
    /* padding-left: 30rpx; */
}

.moreImg {
    width: 35rpx;
    height: 35rpx;
    float: right;
}

.search-view {
    width: 730rpx;
}

.icon {
    position: absolute;
    left: 110rpx;
    top: 12rpx;
}

.ipt {
    margin: 0px;
    padding: 0px;
    border: none;
    background-color: #fff;
    width: 84%;
    height: 50rpx;
    margin-left: 5%;
    border-radius: 10rpx;
    font-size: 28rpx;
    padding-left: 50rpx;
}

.swiper {
    margin-top: 70rpx;
    background-color: #fff;
}

.slide-image {
    width: 100%;
}

.theme {
    padding: 20rpx;
    font-size: 34rpx;
    font-weight: bold;
}

.box {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 20rpx;
    margin-bottom: 20rpx;
}

.video-item {
    background-color: #fff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.listImg {
    width: 340rpx;
    height: 210rpx;
    border-radius: 10rpx;
}

.listImg-cover {
    width: 340rpx;
    height: 340rpx;
    border-radius: 10rpx;
}

.list-content {
    padding: 10rpx;
    display: flex;
    flex-direction: column;
    width: 320rpx;
    font-size: 28rpx;
    color: #c7c7c7;
}

.list-content-one {
    font-weight: bold;
    color: #000;
    display: flex;
    flex-direction: row;
}

.list-content-txt-two {
    display: flex;
    flex-direction: row;
}

.list-content-txt-two-info {
    width: 160rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.zan {
    width: 20rpx;
    height: 22rpx;
    margin-right: 3rpx;
}

.see {
    width: 22rpx;
    height: 22rpx;
    margin-right: 3rpx;
}

.img-div {
    position: relative;
}

.img-div-cover {
    position: absolute;
    top: 0;
    left: 0;
    text-align: center;
    background: rgba(0, 0, 0, .6);
    width: 340rpx;
    height: 340rpx;
    line-height: 340rpx;
    border-radius: 10rpx;
    font-size: 34rpx;
    color: #fff;
}

.button {
    width: 95%;
    margin: 0 auto;
    font-size: 28rpx;
}