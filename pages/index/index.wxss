page {
    overflow-y: auto;
    background-color: #fff;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: initial;
    box-sizing: border-box;
}

.wrap {
    width: 100%;
}

.load-more {
    text-align: center;
    color: #b6b6b6;
    font-size: 30rpx;
    height: 70rpx;
    line-height: 88rpx;
}

.search {
    margin: 0px;
    padding: 0px;
    background-color: #01ae85;
    width: 100%;
    height: 70rpx;
    position: fixed;
    z-index: 55;
}

.icon {
    position: absolute;
    left: 50rpx;
    top: 12rpx;
}

.ipt {
    margin: 0px;
    padding: 0px;
    border: none;
    background-color: #fff;
    width: 84%;
    height: 50rpx;
    margin-left: 5%;
    border-radius: 10rpx;
    font-size: 28rpx;
    padding-left: 50rpx;
}

.swiper {
    margin-top: 70rpx;
    background-color: #fff;
}

.theme {
    padding: 20rpx;
    font-size: 34rpx;
    font-weight: bold;
}

.box {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 20rpx;
    margin-bottom: 20rpx;
}

.video-item {
    background-color: #fff;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.listImg {
    width: 340rpx;
    height: 210rpx;
    border-radius: 10rpx;
}

.list-content {
    padding: 10rpx;
    display: flex;
    flex-direction: column;
    width: 320rpx;
    font-size: 28rpx;
    color: #c7c7c7;
}

.list-content-one {
    font-weight: bold;
    color: #000;
}

.button {
    width: 95%;
    margin: 0 auto;
    font-size: 28rpx;
}